{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://answervault.dev/schemas/questionnaire.schema.json",
  "title": "Questionnaire",
  "type": "object",
  "required": ["slug", "source_filename", "imported_at", "questions"],
  "additionalProperties": false,
  "properties": {
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-safe identifier, e.g. acme-sig-2025"
    },
    "source_filename": { "type": "string" },
    "imported_at": { "type": "string" },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["qid", "text", "section", "answer_type"],
        "additionalProperties": false,
        "properties": {
          "qid": { "type": "string", "minLength": 1 },
          "text": { "type": "string", "minLength": 5 },
          "section": { "type": "string", "minLength": 1 },
          "answer_type": {
            "type": "string",
            "enum": ["yes_no", "yes_no_na", "text", "select"]
          }
        }
      }
    }
  }
}
