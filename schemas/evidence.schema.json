{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://answervault.dev/schemas/evidence.schema.json",
  "title": "Evidence",
  "description": "An evidence item in the AnswerVault Evidence Catalog",
  "type": "object",
  "required": ["id", "title", "type", "url_or_path", "description", "last_updated", "tags"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^ev-[0-9]{3,}$"
    },
    "title": { "type": "string", "minLength": 3, "maxLength": 200 },
    "type": {
      "type": "string",
      "enum": ["doc", "link", "file"],
      "description": "doc=document/PDF, link=URL, file=binary attachment in /evidence/files/"
    },
    "url_or_path": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 10, "maxLength": 2000 },
    "last_updated": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
